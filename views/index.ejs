<!DOCTYPE html>
<html lang="en">

<!-- ============ HEAD ========= -->
<%- include('./partials/head.ejs') %>
<!-- ========= Head =========== -->

<body>

    <h1>Gotta Catch Em ALL</h1><br>
    <a href="/new"><button class="btn-over">Create Pokemon</button></a>
    <div class="main-index">
    <% for (let i = 0; i < pokemons.length; i++) { %>
        <div class="index-container">
            <a href="/<%= i %>">
                <h2><%= pokemons[i].name %></h2>
                <img src="<%= pokemons[i].img %>">
            </a>
            <!-- <p><%= pokemons[i].type %> <span><i>type</i></span> pokemon</p> -->

            <!-- delete form  override POST method required-->
            <div class="flex-btn">
                <form action="/<%=i; %>?_method=DELETE" method="POST">
                    <input type="submit" value="DELETE">
                </form>
    
                <!-- ======== Edit link ========== -->
                <a href="/<%=i; %>/edit"><button>EDIT</button></a>
            </div>
        </div>
        <% } %>
    </div>


</body>

</html>